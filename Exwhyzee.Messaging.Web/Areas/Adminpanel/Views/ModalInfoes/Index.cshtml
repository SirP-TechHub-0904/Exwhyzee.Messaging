@model IEnumerable<Exwhyzee.Messaging.Web.Models.ModalInfo>

@{
    ViewBag.Title = "Index";
}
<section class="content-header">
    <h1>
        Dashboard
        <small>Manage Modal</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Manage Modal</a></li>
        <li class="active">Information</li>
    </ol>
</section>

<section class="content">
    <div class="col-md-8 col-md-offset-2">
        <div class="box box-danger">
            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Modal)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modal)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>
